[project]
name = "{{project_name}}"
license = {file = "LICENSE"}
readme = "README.md"
authors = [
    { name = "{{author_name}}"{% if author_email %}, email = "{{author_email}}"{% endif %} }
]
classifiers = [
    "Development Status :: 4 - Beta",
{%- if project_license == 'MIT' %}
    "License :: OSI Approved :: MIT License",
{%- elif project_license == 'BSD' %}
    "License :: OSI Approved :: BSD License",
{%- endif %}
    "Intended Audience :: Developers",
    "Intended Audience :: Science/Research",
    "Operating System :: OS Independent",
    "Programming Language :: Python",
]
dynamic = ["version"]
dependencies = [
{%- if include_notebooks %}
    "ipykernel", # Support for Jupyter notebooks
{%- endif %}
]

# On a mac, install optional dependencies with `pip install '.[dev]'` (include the single quotes)
[project.optional-dependencies]
dev = [
    "pytest",
    "pytest-cov", # Used to report total code coverage
    "pre-commit", # Used to run checks before finalizing a git commit
{%- if preferred_linter == 'pylint' %}
    "pylint", # Used for static linting of files
{%- elif preferred_linter == 'black' %}
    "black", # Used for static linting of files
{%- endif %}
{%- if mypy_type_checking != 'none' %}
    "mypy", # Used for static type checking of files
{%- endif %}
]

[build-system]
requires = [
    "setuptools>=62", # Used to build and package the Python project
    "setuptools_scm>=6.2", # Gets release version from git. Makes it available programmatically
]
build-backend = "setuptools.build_meta"

[tool.setuptools_scm]
write_to = "src/rail/{{package_name}}/_version.py"

[tools.setuptools.packages.find]
where = ["."]
include = ["rail"]
namespaces = true

[tool.pytest.ini_options]
testpaths = [
    "tests",
]
{%- if preferred_linter == 'black' %}

[tool.black]
line-length = 110
{% if use_isort %}
[tool.isort]
profile = "black"
{%- endif %}

{%- endif %}
{%- if mypy_type_checking != 'none' %}

[tool.setuptools.package-data]
{{package_name}} = ["py.typed"]
{%- endif %}
